<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!-- TO DO - use ${k8s:podName:-}-->
    <springProperty scope="context" name="appName" source="spring.application.name"/>

    <property name="LOG_ROOT" value="/var/logs/app-logs"/>
    <property name="LOG_FILE_NAME" value="application"/>
    <property name="LOG_REQUEST_PATTERN" value="%5p [App=${k8s:podName:-},X-Correlation-Id=%X{traceId:-},Span-Id=%X{spanId:-}]"/>
    <property name="CONSOLE_LOG_PATTERN" value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_REQUEST_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>


    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                ${CONSOLE_LOG_PATTERN}
            </Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>

